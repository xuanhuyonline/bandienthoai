@model QuanLyDienThoai.Models.LoaiThietBi

@{
    ViewBag.Title = "TaoMoiLoaiThietBi";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-6">
        <h2>Thêm loại thiết bị</h2>

        @using (Html.BeginForm("TaoMoiLoaiThietBi", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col">Tên loại</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenLoai, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TenLoai)
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Ghi chú</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Note, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Note)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>