@model QuanLyDienThoai.Models.ChiTietThietBi
@{
    ViewBag.Title = "SuaThietBi";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div class="row justify-content-md-center">
    @Html.AntiForgeryToken()
    <div class="col-6">
        <h2>Sửa điện thoại</h2>
        @Html.ValidationSummary(true)

        @using (Html.BeginForm("SuaThietBi", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                <hr />

                <input type="number" name="MaTB" value="@Model.MaTB" hidden class="form-control">

                <div class="form-group">
                    <label class="control-label col">Tên sản phẩm</label>
                    <div class="col-md-10">
                        <input type="text" name="TenTB" value="@Model.ThietBi.TenTB" class="form-control" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Loại sản phẩm</label>
                    <div class="col-md-10">
                        @Html.DropDownList("MaLoai", null, new { @class = "custom-select" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Nhà cung cấp</label>
                    <div class="col-md-10">
                        @Html.DropDownList("MaNCC", null, new { @class = "custom-select" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Số lượng</label>
                    <div class="col-md-10">
                        <input type="number" name="SoLuong" value="@Model.SoLuong" class="form-control" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Giá tiền</label>
                    <div class="col-md-10">
                        <input type="number" name="GiaTien" value="@Model.GiaTien" class="form-control" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Ram</label>
                    <div class="col-md-10">
                        <input type="text" name="RAM" value="@Model.RAM" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Màn hình</label>
                    <div class="col-md-10">
                        <input type="text" name="ManHinh" value="@Model.ManHinh" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Pin</label>
                    <div class="col-md-10">
                        <input type="text" name="Pin" value="@Model.Pin" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Bộ nhớ trong</label>
                    <div class="col-md-10">
                        <input type="text" name="BoNhoTrong" value="@Model.BoNhoTrong" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Chip</label>
                    <div class="col-md-10">
                        <input type="text" name="Chip" value="@Model.Chip" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Camera Sau</label>
                    <div class="col-md-10">
                        <input type="text" name="CameraSau" value="@Model.CameraSau" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Camera Trước</label>
                    <div class="col-md-10">
                        <input type="text" name="CameraTruoc" value="@Model.CameraTruoc" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Hình 1</label>
                    <div class="col-md-10 d-flex justify-content-between">
                        <div>
                            <input name="HinhAnh1" type="file" />
                            <span class="text-danger">@ViewBag.Upload1</span>
                        </div>
                        <img src="@Url.Content("~/Assests/HinhSP/" + @Model.ThietBi.HinhAnh1)" alt="" height="150px">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Hình 2</label>
                    <div class="col-md-10 d-flex justify-content-between">
                        <div>
                            <input name="HinhAnh2" type="file" />
                            <span class="text-danger">@ViewBag.Upload2</span>
                        </div>
                        <img src="@Url.Content("~/Assests/HinhSP/" + @Model.ThietBi.HinhAnh2)" alt="" height="150px">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Hình 3</label>
                    <div class="col-md-10  d-flex justify-content-between">
                        <div>
                            <input name="HinhAnh3" type="file" />
                            <span class="text-danger">@ViewBag.Upload3</span>
                        </div>
                        <img src="@Url.Content("~/Assests/HinhSP/" + @Model.ThietBi.HinhAnh3)" alt="" height="150px">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Bán chạy</label>
                    <div class="col-md-10">
                        <input type="checkbox" name="IsBestSeller" value="true" checked="@Model.ThietBi.IsBestSeller" class="">
                        @*@Html.CheckBoxFor(m => m.ThietBi.IsBestSeller)*@
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
