@model QuanLyDienThoai.Models.ThanhToan

@{
    ViewBag.Title = "TaoThanhToan";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-6">
        <h2>Thêm Thanh toán</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col">Mã hóa đơn</label>
                    <div class="col-md-10">
                        @Html.DropDownList("MaHD", null, new { @class = "custom-select" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col">Ngày thanh toán</label>
                    <div class="col-md-10">
                        <input type="date" name="NgayThanhToan" class="form-control" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
