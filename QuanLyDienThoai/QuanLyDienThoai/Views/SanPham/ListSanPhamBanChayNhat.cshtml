@using QuanLyDienThoai.Models


@using System.Globalization;

<div class="side-bar p-sm-4 p-3">
    <div class="range border-bottom py-2">
        <h3 class="agileits-sear-head mb-3">Giá tiền</h3>
        <div class="w3l-range">
            <ul>
                <li>
                    <a href="@Url.Action("KQTimKiemGia", "TimKiem", new { @GiaTien1 = 0, @GiaTien2 = 3000000})">Dưới 3 Triệu</a>
                </li>
                <li class="my-1">
                    <a href="@Url.Action("KQTimKiemGia", "TimKiem", new { @GiaTien1 = 3000000, @GiaTien2 = 5000000 })">Từ 3 - 5 Triệu</a>
                </li>
                <li>
                    <a href="@Url.Action("KQTimKiemGia", "TimKiem", new { @GiaTien1 = 5000000, @GiaTien2 = 10000000 })">Từ 5 - 10 Triệu</a>
                </li>
                <li class="my-1">
                    <a href="@Url.Action("KQTimKiemGia", "TimKiem", new { @GiaTien1 = 10000000, @GiaTien2 = 20000000 })">Từ 10 - 20 Triệu</a>
                </li>
                <li class="my-1">
                    <a href="@Url.Action("KQTimKiemGia", "TimKiem", new { @GiaTien1 = 20000000, @GiaTien2 = Int32.MaxValue })">Trên 20 Triệu</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="f-grid py-2">
        <h3 class="agileits-sear-head mb-3">Bán chạy nhất</h3>
        <div class="box-scroll">
            <div class="scroll">
                <div class="row">
                    <div class="col-lg-3 col-sm-2 col-3 left-mar mt-5">
                    </div>
                    <div class="col-lg-9 col-sm-10 col-9 w3_mvd mt-5">
                    </div>
                    <div class="col-lg-3 col-sm-2 col-3 left-mar mt-5">
                    </div>
                    <div class="col-lg-9 col-sm-10 col-9 w3_mvd mt-5">
                    </div>
                    <div class="col-lg-3 col-sm-2 col-3 left-mar mt-5">
                    </div>
                    <div class="col-lg-9 col-sm-10 col-9 w3_mvd mt-5">
                    </div>
                    <div class="col-lg-3 col-sm-2 col-3 left-mar mt-5">
                    </div>
                    <div class="col-lg-9 col-sm-10 col-9 w3_mvd mt-5">
                    </div>
                    <div class="col-lg-3 col-sm-2 col-3 left-mar mt-5">
                    </div>
                    <div class="col-lg-9 col-sm-10 col-9 w3_mvd mt-5">
                    </div>
                    <div class="col-lg-3 col-sm-2 col-3 left-mar mt-5">
                    </div>
                    <div class="col-lg-9 col-sm-10 col-9 w3_mvd mt-5">
                    </div>
                    <div class="col-lg-3 col-sm-2 col-3 left-mar mt-5">
                    </div>
                    <div class="col-lg-9 col-sm-10 col-9 w3_mvd mt-5">
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-sm-2 col-3 left-mar mt-5">
                            <img src="@Url.Content("~/Assests/HinhSP/" + @item.ThietBi.HinhAnh1)" alt="" class="img-fluid">
                        </div>
                        <div class="col-lg-9 col-sm-10 col-9 w3_mvd mt-5">
                            <a href="@Url.Action("XemChiTiet", "SanPham", new { @maSP = item.MaTB})">@item.ThietBi.TenTB</a>
                            <a href="" class="price-mar mt-2">@item.GiaTien.ToString("##,#", new CultureInfo("es-ES")) VNĐ</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



